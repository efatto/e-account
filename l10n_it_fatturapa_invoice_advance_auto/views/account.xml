<?xml version="1.0" encoding="utf-8"?>
<openerp>
<data>
    <record id="view_invoice_form_advance" model="ir.ui.view">
        <field name="name">account.invoice.form.advance</field>
        <field name="model">account.invoice</field>
        <field name="inherit_id" ref="account.invoice_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='number']" position="before">
                <field name="is_advance_invoice" invisible="1"/>
                <label string="of advance"
                       attrs="{'invisible': [('is_advance_invoice', '=', False)]}"/>
            </xpath>
        </field>
    </record>
</data>
</openerp>

<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="view_account_analytic_account_tree_c2c_3_usability" model="ir.ui.view">
            <field name="name">account.analytic.account.list.contract.usability</field>
            <field name="model">account.analytic.account</field>
            <field name="inherit_id" ref="account_analytic_analysis.view_account_analytic_account_tree_c2c_3"/>
            <field name="arch" type="xml">
                <field name="toinvoice_total" position="replace">
                    <field name="fix_price_to_invoice" sum="Total Contract To Invoice" string="Contract Amount"/>
                    <field name="invoiced_total" sum="Total Invoiced" string="Invoiced"/>
                    <field name="remaining_total" sum="Total Remaining" string="Remaining"/>
                    <field name="ca_to_invoice" sum="Timesheet To Invoice" string="Timesheet to Invoice"/>
                </field>
            </field>
        </record>

        <record id="account_analytic_account_form_form_usability" model="ir.ui.view">
            <field name="name">account.analytic.account.invoice.form.usability</field>
            <field name="model">account.analytic.account</field>
            <field name="inherit_id" ref="account_analytic_analysis.account_analytic_account_form_form"/>
            <field name="arch" type="xml">
                <field name="fix_price_to_invoice" position="replace"/>
                <field name="toinvoice_total" position="replace"/>
                <field name="est_total" position="replace"/>
                <field name="amount_max" position="replace">
                    <field class="oe_inline" name="fix_price_to_invoice"
                           attrs="{'invisible': [('fix_price_invoices','=',False)]}"/>
                </field>
            </field>
        </record>
    </data>
</openerp>

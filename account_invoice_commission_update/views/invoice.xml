<?xml version="1.0" encoding="utf-8"?>
<openerp>
<data>

    <record id="invoice_form_update_agents" model="ir.ui.view">
        <field name="name">account.invoice.form.agents.update</field>
        <field name="model">account.invoice</field>
        <field name="inherit_id" ref="account.invoice_form"/>
        <field name="arch" type="xml">
            <field name="account_id" position="after">
                <field name="agents" widget="many2many_tags" nolabel="1" placeholder="Update agents"/>
                <button string="Update agents" name="invoice_update_agents" type="object" icon="gtk-ok"
                help='Update agents in invoice lines, except the ones with service type in: trasport, other or contribution.'/>
            </field>
        </field>
    </record>

</data>
</openerp>

<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_sale_order_kanban" model="ir.ui.view">
        <field name="name">sale.order.kanban</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_sale_order_kanban"/>
        <field name="arch" type="xml">
            <field name="name" position="after">
                <field name="client_order_ref"/>
            </field>
            <xpath expr="//div[hasclass('oe_kanban_bottom_left', 'text-muted')]" position="inside">
                <span><strong><t t-esc="record.client_order_ref.value"/></strong></span>
            </xpath>
        </field>
    </record>
</odoo>

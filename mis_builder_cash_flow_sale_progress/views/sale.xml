<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="view_order_form" model="ir.ui.view">
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="mis_builder_cash_flow_sale.view_order_form" />
        <field name="arch" type="xml">
            <xpath
                expr="//field[@name='sale_balance_forecast']"
                position="after"
            >
                <field
                    name="sale_progress_balance_forecast"
                    sum="Total forecast balance progress"
                />
            </xpath>
        </field>
    </record>
    <record model="ir.ui.view" id="view_sale_order_progress_form">
        <field name="model">sale.order.progress</field>
        <field name="inherit_id" ref="sale_order_progress.view_sale_order_progress_form"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook" position="inside">
                <page string="Order progress cashflow lines">
                    <field name="cashflow_line_ids">
                        <tree>
                            <field name="date" />
                            <field name="currency_id" />
                            <field
                                name="sale_balance_currency"
                                widget="monetary"
                                options="{'currency_field': 'currency_id'}"
                            />
                            <field name="sale_invoiced_percent" />
                            <field name="sale_deposit_percent" />
                            <field
                                name="sale_progress_balance_forecast"
                                sum="Total progress forecast balance"
                            />
                        </tree>
                    </field>
                </page>
            </xpath>
        </field>
    </record>
</odoo>

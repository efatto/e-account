<odoo>

    <record id="sale_form_update_default_discount" model="ir.ui.view">
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <field name="partner_shipping_id" position="after">
                <field name="default_sale_complex_discount"
                    attrs="{'invisible':[('state','not in',['draft',])]}"/>
            </field>
            <field name="payment_term_id" position="after">
                <button string="Update discount to %:" name="sale_discount_update"
                    type="object" attrs="{'invisible':[('state','not in',['draft',])]}"/>
                <field name="default_sale_discount"
                    attrs="{'invisible':[('state','not in',['draft',])]}" nolabel="1"
                    style="margin-left: 8px; width: inherit;"/>
            </field>
        </field>
    </record>

</odoo>

<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
    <!-- Attachment -->
    <record id="view_invoice_attachment_form" model="ir.ui.view">
        <field name="name">account.invoice.attachment.form</field>
        <field name="model">account.invoice.attachment</field>
        <field name="arch" type="xml">
            <form string="Export Invoices" col="4">
                <field name="datas" filename="datas_fname" readonly="1" nolabel="1"/>
                <field name="datas_fname" invisible="1"/>
                <field name="name" invisible="1"/>
                <newline/>
                <separator string="Invoices"/>
                <newline/>
                <group groups="base.group_no_one" string="History">
                    <field name="create_uid" readonly="1"/>
                    <field name="create_date" readonly="1"/>
                </group>
            </form>
        </field>
    </record>
      <record model="ir.ui.view" id="wizard_account_invoice_report_export">
        <field name="name">Export invoices report</field>
        <field name="model">wizard.account.invoice.export</field>
        <field name="arch" type="xml">
          <form string="Export invoice reports" >
              <field name="export_report_name"/>
              <field name="invoice_report"/>
            <separator colspan="4"/>
            <group>
              <button string="Export invoices" name="export_report" type="object" />
              <button string="Cancel" special="cancel"/>
            </group>
          </form>
        </field>
      </record>

        <act_window name="Export account invoice reports"
            res_model="wizard.account.invoice.export"
            src_model="account.invoice"
            view_mode="form"
            target="new"
            key2="client_action_multi"
            id="action_report_invoice_export"
            view_id="wizard_account_invoice_report_export"
            context="{'default_active_ids': active_ids,}"/>
    </data>
</openerp>

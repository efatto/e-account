<?xml version="1.0" ?>
<odoo>

        <record id="view_bank_form_import_sheet" model="ir.ui.view">
            <field name="name">res.bank.form.import.sheet</field>
            <field name="model">res.bank</field>
            <field name="inherit_id" ref="base.view_res_bank_form"/>
            <field name="arch" type="xml">
                <field name="bic" position="replace">
                    <group string="Bank Details" colspan="6">
                        <field name="init_line_to_exclude"/>
                        <field name="end_line_to_exclude"/>
                        <field name="column_header"/>
                        <field name="separator"/>
                        <field name="date_format"/>
                    </group>
                </field>
            </field>
    	</record>

    	<record id="view_partner_bank_form_import_sheet" model="ir.ui.view">
            <field name="name">res.partner.bank.form.import.sheet</field>
            <field name="model">res.partner.bank</field>
            <field name="inherit_id" ref="base.view_partner_bank_form"/>
            <field name="arch" type="xml">
                <field name="bank_id" position="after">
                    <newline></newline>
                    <field name="bank_init_line_to_exclude"/>
                    <field name="bank_end_line_to_exclude"/>
                    <field name="bank_column_header"/>
                    <field name="bank_separator"/>
                    <field name="bank_date_format"/>
                </field>
                
            </field>
        </record>

</odoo>

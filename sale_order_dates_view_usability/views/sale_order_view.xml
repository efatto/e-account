<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="sale_order_dates.view_order_tree_date" model="ir.ui.view">
            <field name="model">sale.order</field>
            <field name="arch" type="xml">
                <field name="amount_total" position="before">
                    <field name="requested_date"/>
                </field>
            </field>
        </record>

        <!-- Add requested_date and commitment_date on quotation view -->
        <record id="sale_order_dates.view_quotation_tree_date" model="ir.ui.view">
            <field name="model">sale.order</field>
            <field name="arch" type="xml">
                <field name="amount_total" position="before">
                    <field name="requested_date"/>
                </field>
            </field>
        </record>

        <record id="view_sale_orderfor_view" model="ir.ui.view">
            <field name="name">sale.order.form.inherit.view</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale_order_dates.view_sale_orderfor" />
            <field name="arch" type="xml">
                <field name="requested_date" position="after">
                    <field name="date_confirm"/>
                </field>
                <field name="committment_date" position="attributes">
                    <attribute name="invisible">True</attribute>
                </field>
            </field>
        </record>

        <record id="view_sale_order_calendar_inh" model="ir.ui.view">
            <field name="name">sale.order.calendar.inh</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_sale_order_calendar"/>
            <field name="arch" type="xml">
                <calendar position="replace">
                    <calendar string="Sales Orders" color="state" date_start="requested_date">
                        <field name="partner_id"/>
                        <field name="amount_total"/>
                    </calendar>
                </calendar>
            </field>
        </record>

    </data>
</openerp>

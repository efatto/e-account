<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data noupdate="0">
    
        <!--Account invoice Email template -->
        <record id="email_template_invoice_from_tree" model="email.template">
            <field name="name">Report by Email</field>
            <field name="email_from">${(object.user_id.email or object.company_id.email or 'noreply@localhost')|safe}</field>
            <field name="subject">Reports </field>
            <field name="email_to"></field>
            <field name="model_id" ref="account.model_account_invoice"/>
            <field name="auto_delete" eval="True"/>
            <field name="body_html"><![CDATA[
    <div style="font-family: 'Lucica Grande', Ubuntu, Arial, Verdana, sans-serif; font-size: 12px; color: rgb(34, 34, 34); background-color: #FFF; ">
    <p>Hello </p>

    <p>You will find attached invoice reports.</p>

    <p>Thanks</p>

    </div>            
            ]]></field>
        </record>
        <!--Sale order Email template -->
        <record id="email_template_sale_from_tree" model="email.template">
            <field name="name">Report Sale by Email</field>
            <field name="email_from">${(object.user_id.email or object.company_id.email or 'noreply@localhost')|safe}</field>
            <field name="subject">Sale Reports</field>
            <field name="email_to"></field>
            <field name="model_id" ref="sale.model_sale_order"/>
            <field name="auto_delete" eval="True"/>
            <field name="body_html"><![CDATA[
    <div style="font-family: 'Lucica Grande', Ubuntu, Arial, Verdana, sans-serif; font-size: 12px; color: rgb(34, 34, 34); background-color: #FFF; ">
    <p>Hello </p>

    <p>You will find attached sale order reports.</p>

    <p>Thanks</p>

    </div>
            ]]></field>
        </record>

        <act_window name="Send account invoice reports"
            res_model="mail.compose.message"
            src_model="account.invoice"
            view_mode="form"
            multi="True"
            target="new"
            key2="client_action_multi"
            id="action_send_report_invoices"
            view_type="form"
            context="{'default_template_id': ref('email_from_tree.email_template_invoice_from_tree'),
            'default_active_ids': active_ids,}"/>

        <act_window name="Send sale order reports"
            res_model="mail.compose.message"
            src_model="sale.order"
            view_mode="form"
            multi="True"
            target="new"
            key2="client_action_multi"
            id="action_send_report_sales"
            view_type="form"
            context="{'default_template_id': ref('email_from_tree.email_template_sale_from_tree'),
            'default_active_ids': active_ids,}"/>

    </data>
</openerp>               
                
    <record id="view_invoice_statement_attachment_form" model="ir.ui.view">
        <field name="name">invoice.statement.attachment.form</field>
        <field name="model">invoice.statement.attachment</field>
        <field name="arch" type="xml">
            <form string="Export Invoice Statement" col="4">
                <field name="datas" filename="datas_fname" readonly="1" nolabel="1"/>
                <field name="datas_fname" invisible="1"/>
                <field name="name" invisible="1"/>
                <newline/>
                <separator string="Invoice Statement"/>
                <newline/>
                <field name="invoice_statement_id" nolabel="1"/>
                <newline/>
                <group groups="base.group_no_one" string="History">
                    <field name="create_uid" readonly="1"/>
                    <field name="create_date" readonly="1"/>
                </group>
            </form>
        </field>
    </record>

    <record id="invoice_statement_view_tree" model="ir.ui.view">
        <field name="name">invoice.statement.view.tree</field>
        <field name="model">invoice.statement</field>
        <field name="arch" type="xml">
            <tree>
                <field name="statement_partner_id"/>
                <field name="sender_partner_id"/>
                <field name="sender_date_commitment"/>
            </tree>
        </field>
    </record>
    <record id="invoice_statement_view_form" model="ir.ui.view">
        <field name="name">invoice.statement.view.form</field>
        <field name="model">invoice.statement</field>
        <field name="arch" type="xml">
            <form string="Invoice Statement">
                <group>
                    <field name="type"/>
                    <field name="progressive_number"/>
                    <field name="statement_partner_id"/>
                    <field name="sender_partner_id"/>
                    <field name="sender_date_commitment"/>
                    <field name="attachment_id"/>
                    <button type='action' name="%(action_add_period)d" string="Add period" colspan="2"></button>
                    <button type='action' name="%(action_remove_period)d" string="Remove period" colspan="2"></button>
                    <field name="period_ids"/>
                    <field name="company_id"/>
                </group>
            </form>
        </field>
    </record>
    <record id="invoice_statement_action" model="ir.actions.act_window">
        <field name="name">Invoice Statement</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">invoice.statement</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="menu_invoice_statement" action="invoice_statement_action"
        name="Invoice Statement" parent="account.menu_account_end_year_treatments" sequence="10"/>


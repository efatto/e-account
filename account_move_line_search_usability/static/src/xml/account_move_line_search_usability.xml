<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">

  <t t-name="AccountMoveLineSearchUsability">
    <div class="ui-toolbar" style="margin-bottom:0px;">
      <div class="oe_form_char_section">
        <h4>Account :</h4>
        <input type="text" class="oe_account_select_account"/>
      </div>
      <t t-if="group_analytic">
        <div class="oe_form_char_section">
          <h4>Analytic Account :</h4>
          <input type="text" class="oe_account_select_analytic_account"/>
        </div>
      </t>
      <div class="oe_form_char_section">
        <h4>Partner :</h4>
        <input type="text" class="oe_account_select_partner"/>
      </div>
      <div class="oe_form_dropdown_section">
        <h4>Journal :</h4>
        <select class="oe_account_select_journal"/>
      </div>
      <div class="oe_form_char_section">
        <h4>Period :</h4>
        <input type="text" class="oe_account_select_period"/>
      </div>
      <div class="oe_form_char_section">
        <h4>Reconcile :</h4>
        <input type="text" class="oe_account_select_reconcile"/>
      </div>
      <div class="oe_form_field_date">
        <h4>Date from: </h4>
        <input type="date" class="oe_account_select_date_from"/>
      </div>
      <div class="oe_form_field_date">
        <h4>Date to: </h4>
        <input type="date" class="oe_account_select_date_to"/>
      </div>
        <div>
            <button class="oe_account_credit oe_button oe_highlight" href="javascript:void(0)"
               >Credit</button>
        </div>
    </div>
  </t>

</templates>

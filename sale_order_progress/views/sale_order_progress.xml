<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_sale_order_progress_filter" model="ir.ui.view">
        <field name="name">sale.order.progress.filter</field>
        <field name="model">sale.order.progress</field>
        <field name="arch" type="xml">
            <search string="Search order progress">
                <field name="offset_month"/>
                <field name="date"/>
                <field name="payment_term_id"/>
                <field name="name"/>
                <field name="order_id"/>
                <field name="is_advance"/>
                <field name="amount_percent"/>
                <field name="advance_to_return_percent"/>
                <field name="amount_toinvoice"/>
                <field name="amount_invoiced"/>
                <field name="invoiced"/>
                <filter name="to_invoice"
                   string="To invoice"
                   domain="[('invoiced', '=', False), ('amount_toinvoice', '>', 0)]"/>
            </search>
        </field>
    </record>
    <record id="view_sale_order_progress_tree" model="ir.ui.view">
        <field name="name">sale.order.progress.tree</field>
        <field name="model">sale.order.progress</field>
        <field name="arch" type="xml">
            <tree string="Sale order progress">
                <field name="offset_month"/>
                <field name="date"/>
                <field name="payment_term_id"/>
                <field name="name"/>
                <field name="order_id"/>
                <field name="is_advance"/>
                <field name="amount_percent"/>
                <field name="advance_to_return_percent" sum="Total to return (%)"/>
                <field name="amount_toinvoice" sum="Total to Invoice"/>
                <field name="amount_invoiced" sum="Total Invoiced"/>
                <field name="residual_toinvoice" sum="Residual to Invoice"/>
                <field name="invoiced"/>
            </tree>
        </field>
    </record>
    <record id="view_sale_order_progress_form" model="ir.ui.view">
        <field name="name">sale.order.progress.form</field>
        <field name="model">sale.order.progress</field>
        <field name="arch" type="xml">
            <form string="Sale Order Progress">
                <sheet>
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only"/>
                        <h1><field name="name" class="oe_inline"/></h1>
                    </div>
                    <group>
                        <field name="order_id" options="{'no_create_edit': True}"/>
                    </group>
                    <group>
                        <field name="offset_month"/>
                        <field name="date"/>
                        <field name="payment_term_id"/>
                        <field name="is_advance"/>
                        <field name="amount_percent"/>
                        <field name="advance_to_return_percent" sum="Total to return (%)"/>
                        <field name="amount_toinvoice_manual" sum="Total to Invoice"/>
                        <field name="amount_toinvoice" sum="Total to Invoice"/>
                        <field name="amount_invoiced" sum="Total Invoiced"/>
                        <field name="residual_toinvoice" sum="Residual to Invoice"/>
                        <field name="invoiced"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record id="action_sale_order_progress_line_form" model="ir.actions.act_window">
        <field name="name">Sale order progress</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">sale.order.progress</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{}</field>
        <field name="view_id" ref="view_sale_order_progress_tree"/>
        <field name="search_view_id" ref="view_sale_order_progress_filter"/>
    </record>
    <menuitem action="action_sale_order_progress_line_form" id="sale_order_progress"
        parent="sale.sale_order_menu"
        sequence="100"/>
</odoo>

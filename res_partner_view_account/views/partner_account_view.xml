<?xml version="1.0" encoding="utf-8"?>
<openerp>
  <data>

    <record id="partner_view_button_account_moves" model="ir.ui.view">
        <field name="name">usability.res.partner.journal.items.button.splitted</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <div name="button_box" position="inside">
                <button name="show_payable_account" type="object"
                    attrs="{'invisible': [('supplier', '=', False)]}"
                    context="{'invisible_balance': False}"
                    icon="fa-list" class="oe_stat_button">
                    <field string="Payable Account" name="payable_journal_item_count"
                        widget="statinfo"/>
                </button>
                <button name="show_receivable_account" type="object"
                    attrs="{'invisible': [('customer', '=', False)]}"
                    context="{'invisible_balance': False}"
                    icon="fa-list" class="oe_stat_button">
                    <field string="Receivable Account" name="journal_item_count"
                        widget="statinfo"/>
                </button>
            </div>
        </field>
    </record>

  </data>
</openerp>

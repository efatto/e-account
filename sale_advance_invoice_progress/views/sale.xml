<?xml version="1.0" encoding="utf-8"?>
<openerp>
  <data>

        <record id="view_order_form_advance_invoice" model="ir.ui.view">
            <field name="name">sale.order.form.advance.invoice</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
               <xpath expr="//button[@name='%(sale.action_view_sale_advance_payment_inv)d']"
                   position="replace">
                   <button name="%(sale.action_view_sale_advance_payment_inv)d" string="Create Invoice"
                    type="action" class="oe_highlight" groups="base.group_user"
                    attrs="{'invisible': [('state', 'not in', ['manual','progress']),]}"
                   />
                   <button name="%(sale.action_view_sale_advance_payment_inv)d" string="Create Invoice"
                    type="action" groups="base.group_user"
                    attrs="{'invisible': ['|', ('state', 'not in', ['done']), ('invoiced', '=', True)]}"
                   />
                </xpath>
                 <xpath expr="//page[@string='Other Information']" position="after">
                    <page string="Invoices">
                        <group>
                            <group>
                                <field name="advance_amount"/>
                                <field name="advance_percentage"/>
                                <field name="advance_refunded_amount"/>
                            </group>
                            <group>
                                <field name="advance_amount_total"/>
                                <field name="advance_residual"/>
                                <field name="amount_residual"/>
                            </group>
                        </group>
                        <group string="Refunded invoice lines">
                            <field name="refunded_invoice_line_ids" nolabel="1">
                                <tree>
                                    <field name="name"/>
                                    <field name="invoice_number"/>
                                    <field name="account_id"/>
                                    <field name="price_subtotal_signed" sum="Total"/>
                                </tree>
                            </field>
                        </group>
                        <group string="Advance Invoices">
                            <field name="advance_invoice_ids" context="{'form_view_ref': 'account.invoice_form'}" nolabel="1">
                                <tree>
                                    <field name="number"/>
                                    <field name="date_invoice"/>
                                    <field name="origin"/>
                                    <field name="state"/>
                                    <field name="amount_untaxed_signed" sum="Total Untaxed"/>
                                    <field name="amount_total_signed" sum="Total Amount"/>
                                    <field name="residual_signed" sum="Total Residual"/>
                                </tree>
                            </field>
                        </group>
                        <group string="Invoices from Order">
                            <field name="from_line_invoice_ids" context="{'form_view_ref': 'account.invoice_form'}" nolabel="1">
                                <tree>
                                    <field name="number"/>
                                    <field name="date_invoice"/>
                                    <field name="origin"/>
                                    <field name="state"/>
                                    <field name="amount_untaxed_signed" sum="Total Untaxed"/>
                                    <field name="amount_total_signed" sum="Total Amount"/>
                                    <field name="residual_signed" sum="Total Residual"/>
                                </tree>
                            </field>
                        </group>
                        <group string="Other Invoices">
                            <field name="other_invoice_ids" context="{'form_view_ref': 'account.invoice_form'}" nolabel="1">
                                <tree>
                                    <field name="number"/>
                                    <field name="date_invoice"/>
                                    <field name="origin"/>
                                    <field name="state"/>
                                    <field name="amount_untaxed_signed" sum="Total Untaxed"/>
                                    <field name="amount_total_signed" sum="Total Amount"/>
                                    <field name="residual_signed" sum="Total Residual"/>
                                </tree>
                            </field>
                        </group>
                    </page>
                </xpath>
            </field>
        </record>

        <record id="view_order_advance_progress_tree" model="ir.ui.view">
            <field name="name">sale.order.advance.progress.tree</field>
            <field name="model">sale.order</field>
            <field name="arch" type="xml">
                <tree string="Sales Orders Advances" fonts="bold:message_unread==True" colors="grey:state=='cancel';blue:state in ('waiting_date','manual');red:state in ('invoice_except','shipping_except')">
                    <field name="message_unread" invisible="1"/>
                    <field name="name" string="Order Number"/>
                    <field name="date_order"/>
                    <field name="partner_id"/>
                    <field name="user_id" invisible="1"/>
                    <field name="amount_untaxed" sum="Total Untaxed"/>
                    <field name="from_line_invoice_tag" widget="many2many_tags"/>
                    <field name="from_line_amount_residual" sum="Total invoiced not yet paid"/>
                    <field name="amount_total" sum="Total Tax Included"/>
                    <field name="state"/>
                    <field name="advance_amount"/>
                    <field name="advance_refunded_amount"/>
                    <field name="advance_invoice_tag" widget="many2many_tags"/>
                    <field name="advance_amount_total"/>
                    <field name="advance_residual"/>
                    <field name="amount_residual"/>
                </tree>
            </field>
        </record>

        <record id="action_advance_invoice_progress" model="ir.actions.act_window">
            <field name="name">Advance Invoice Progress</field>
            <field name="res_model">sale.order</field>
            <field name="type">ir.actions.act_window</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="sale_advance_invoice_progress.view_order_advance_progress_tree"/>
            <!--<field name="search_view_id" ref="stock.view_move_search"/>-->
            <field name="domain">[('state', 'not in', ('draft', 'cancel'))]</field>
            <!--<field name="context">{}</field>-->
            <field name="help" type="html">
              <p>
                This menu gives you sale order advance.
              </p>
            </field>
        </record>

        <menuitem action="action_advance_invoice_progress" id="menu_advance_invoice_progress"
            parent="base.menu_sales" groups="base.group_sale_salesman,base.group_sale_manager"
            sequence="10"/>

  </data>
</openerp>

<?xml version="1.0" encoding="utf-8"?>
<openerp>
<data>

    <record id="invoice_form_advance" model="ir.ui.view">
        <field name="name">account.invoice.form.advance</field>
        <field name="model">account.invoice</field>
        <field name="inherit_id" ref="account.invoice_form"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook/page[@string='Invoice Lines']/field[@name='invoice_line']/tree/field[@name='sequence']" position="after">
                <field name="advance_invoice_id" groups="base.group_no_one"
                domain="[('partner_id', '=', partner_id)]"/>
            </xpath>
        </field>
    </record>

</data>
</openerp>

<?xml version="1.0" encoding="utf-8"?>
<openerp>
  <data>
    <record id="account_move_template_ext.view_move_line_tree_model" model="ir.ui.view">
        <field name="name">account.move.line.tree.model</field>
        <field name="model">account.move.line</field>
        <field name="priority">1</field>
        <field name="arch" type="xml">
            <xpath expr="/tree/field[@name='journal_id']" position="before">
                <field name="template_id" invisible="1" options='{"no_open":True}'/>
            </xpath>
        </field>
    </record>
    <record id="view_move_line_tree_usability" model="ir.ui.view">
        <field name="name">account.move.line.tree.usability</field>
        <field name="model">account.move.line</field>
        <field name="priority">1</field>
        <field name="inherit_id" ref="account.view_move_line_tree"/>
        <field name="arch" type="xml">
            <xpath expr="/tree/field[@name='period_id']" position="attributes">
                <attribute name="invisible">True</attribute>
            </xpath>
            <xpath expr="/tree/field[@name='name']" position="attributes">
                <attribute name="invisible">True</attribute>
            </xpath>
            <xpath expr="/tree/field[@name='account_id']" position="attributes">
                <attribute name="invisible">True</attribute>
            </xpath>
        </field>
    </record>
  </data>
</openerp>

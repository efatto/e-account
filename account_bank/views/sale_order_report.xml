<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_saleorder_document_bank" inherit_id="sale.report_saleorder_document">
        <xpath expr="//t/div[hasclass('page')]/p[@t-field='doc.note']" position="after">
            <p t-if="doc.partner_id.company_bank_id">
                <strong>Bank:</strong>
                <span t-field="doc.partner_id.company_bank_id.bank_name"/>
                <span t-field="doc.partner_id.company_bank_id.acc_number"/>
            </p>
        </xpath>
    </template>
</odoo>
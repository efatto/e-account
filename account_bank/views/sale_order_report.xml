<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_saleorder_document_bank" inherit_id="sale.report_saleorder_document">
        <xpath expr="//t/div[@class='page']/p[@t-field='doc.note']" position="after">
                <p t-if="doc.partner_id.company_bank_id">
                    <strong>Bank:</strong>
                    <span t-field="doc.partner_id.company_bank_id.bank_name"/>
                    <span t-field="doc.partner_id.company_bank_id.acc_number"/>
                </p>
        </xpath>
        <xpath expr="//t/div[@class='page']/div[@id='informations']/div[@t-if='doc.date_order']/p[@t-field='doc.date_order']" position="replace">
            <p t-field="doc.date_order" t-field-options='{"format": "d MMMM y"}'/>
        </xpath>
    </template>
</odoo>
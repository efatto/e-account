<?xml version="1.0" ?>
<odoo>

    <record model="ir.ui.view" id="invoice_form_bank_riba">
        <field name="name">invoice.form.bank.riba</field>
        <field name="model">account.invoice</field>
        <field name="inherit_id" ref="account.invoice_form"/>
        <field name="arch" type="xml">
            <field name="partner_bank_id" position="attributes">
                <attribute name="domain">[('acc_type', '=', 'iban'), ('company_id', '=', company_id), ('partner_id', '=', company_id)]</attribute>
                <attribute name="invisible">False</attribute>
            </field>
            <field name="partner_bank_id" position="after">
                <field name="bank_riba_id"/>
            </field>
        </field>
    </record>

    <record id="invoice_tree_reg_date" model="ir.ui.view">
        <field name="name">account.invoice.tree.bank</field>
        <field name="model">account.invoice</field>
        <field name="inherit_id" ref="account.invoice_tree"/>
        <field name="type">tree</field>
        <field name="arch" type="xml">
            <field name="date_invoice" position="after">
                <field name="payment_term_id" invisible="context.get('type') == 'in_invoice'"/>
            </field>
            <field name="date_due" position="after">
                <field name="actual_bank_riba_id" invisible="context.get('type') == 'in_invoice'"/>
            </field>
        </field>
    </record>

    <record id="invoice_filter_reg_date" model="ir.ui.view">
        <field name="model">account.invoice</field>
        <field name="inherit_id" ref="account.view_account_invoice_filter"/>
        <field name="arch" type="xml">
            <field name="journal_id" position="after">
                <field name="actual_bank_riba_id" invisible="context.get('type') == 'in_invoice'"/>
                <field name="payment_term_id" widget="selection" invisible="context.get('type') == 'in_invoice'"/>
            </field>
        </field>
    </record>

</odoo>
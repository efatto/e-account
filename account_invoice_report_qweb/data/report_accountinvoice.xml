<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="external_layout">
        <!-- Multicompany -->
        <t t-if="not o and doc">
            <t t-set="o" t-value="doc"/>
        </t>
        <t t-if="o and 'company_id' in o">
            <t t-set="company" t-value="o.company_id"></t>
        </t>
        <t t-if="not o or not 'company_id' in o">
            <t t-set="company" t-value="res_company"></t>
        </t>

        <t t-call="account_invoice_report_qweb.external_layout_header" />
        <t t-raw="0" />
    <!--    <t t-call="report.external_layout_footer" />-->
    </template>
    <template id="external_layout_header">
        <div class="header">
            <div class="row">
                <div class="col-xs-5" id="logo">
                    <img t-if="company.logo" t-att-src="'data:image/png;base64,%s' % company.logo" style="max-height: 30px;"/>
                </div>
                <div class="col-xs-1"/>
                <div class="col-xs-2 g_cell">
                    <strong>DATE</strong><br/>
                    <span t-field="o.date_invoice"
                        t-field-options='{"format": "dd/MM/yyyy"}' />
                </div>
                <div class="col-xs-3 g_cell">
                    <strong>
                        <span t-if="o.type == 'out_invoice'">Fattura<span t-if="o.partner_id.lang != 'it_IT'"> / Invoice</span></span>
                        <span t-if="o.type == 'out_refund'">Nota di credito<span t-if="o.partner_id.lang != 'it_IT'"> / Credit Note</span></span>
                        <span t-if="o.state == 'proforma2'"> PROFORMA</span>
                    </strong><br/>
                    Nr. <span t-if="o.number"><span t-field="o.number"/></span>
                    <t t-if="check_installed_module('account_invoice_pro_forma_sequence') and o.state == 'proforma2'">
                        <span t-field="o.pro_forma_number"/>
                    </t>
                </div>
                <div class="col-xs-1 g_cell">
                    <strong>PAG.</strong><br/>
                    <div style="text-align: left !important;">
                        <span class="page"/>/<span class="topage"/>
                    </div>
                </div>
            </div>
            <p/>
            <div class="row" style="font-size: 8px;">
                <div class="col-xs-5">
                    <t t-if="not company.custom_footer">
                        <div t-field="company.partner_id"
                            t-field-options='{"widget": "contact", "fields": ["address", "name"], "no_marker": true}'
                            style="border-bottom: 1px solid black;"
                            class="pull-left"
                        />
                    </t>
                    <t t-if="company.custom_footer">
                        <span t-field="company.rml_footer" class="pull-left"/>
                    </t>
                </div>
            </div>
            <p/>
        </div>
    </template>

    <template id="account_invoice_report_qweb.report_accountinvoice_document">
        <t t-call="account_invoice_report_qweb.external_layout">
            <t t-set="doc" t-value="doc.with_context({'lang':doc.partner_id.lang})" />
            <div class="page">
                <div class="oe_structure"/>
                    <div class="row">
                        <div class="col-xs-5">
                        </div>
                        <div class="col-xs-1">
                        </div>
                        <div class="col-xs-6 g_cell">
                            <t t-if="check_installed_module('account_invoice_shipping_address') and doc.print_shipping_address">
                            <span t-if="doc.partner_shipping_id and doc.partner_shipping_id != doc.partner_id">
                                <strong>SHIPPING ADDRESS:</strong>
                                <div t-if="doc.partner_shipping_id.name"><span t-field="doc.partner_shipping_id.name"/></div>
                                <div>
                                    <span t-if="doc.partner_shipping_id.street"><span t-field="doc.partner_shipping_id.street"/> </span>
                                    <span t-if="doc.partner_shipping_id.street2"><span t-field="doc.partner_shipping_id.street2"/> </span>
                                </div>
                                <div>
                                    <span t-if="doc.partner_shipping_id.zip"><span t-field="doc.partner_shipping_id.zip"/> </span>
                                    <span t-if="doc.partner_shipping_id.city"><span t-field="doc.partner_shipping_id.city"/> </span>
                                    <span t-if="doc.partner_shipping_id.state_id">(<span t-field="doc.partner_shipping_id.state_id.code"/>) </span>
                                    <span t-if="doc.partner_shipping_id.country_id"><span t-field="doc.partner_shipping_id.country_id.name"/> </span>
                                </div>
                            </span>
                            </t>
                        </div>
                    </div>
                    <p/>
                    <div class="row">
                        <div class="col-xs-5">
                            <t t-as="address_id" t-foreach="address_invoice_id[0]">
                                <div t-if="address_id != doc.partner_id">
                                    <div class="g_cell">
                                        <strong>REGISTERED OFFICE:</strong>
                                        <div t-if="doc.partner_id.name"><span t-field="doc.partner_id.name"/></div>
                                        <div>
                                            <span t-if="doc.partner_id.street"><span t-field="doc.partner_id.street"/> </span>
                                            <span t-if="doc.partner_id.street2"><span t-field="doc.partner_id.street2"/> </span>
                                        </div>
                                        <div>
                                            <span t-if="doc.partner_id.zip"><span t-field="doc.partner_id.zip"/> </span>
                                            <span t-if="doc.partner_id.city"><span t-field="doc.partner_id.city"/> </span>
                                            <span t-if="doc.partner_id.state_id">(<span t-field="doc.partner_id.state_id.code"/>) </span>
                                            <span t-if="doc.partner_id.country_id"><span t-field="doc.partner_id.country_id.name"/> </span>
                                        </div>
                                    </div>
                                </div>
                            </t>
                        </div>
                        <div class="col-xs-1">
                        </div>
                        <div class="col-xs-6 g_cell">
                            <t t-as="address_id" t-foreach="address_invoice_id[0]">
                                <span t-if="address_id">
                                    <strong>BILLING ADDRESS:</strong>
                                    <div t-if="address_id.name"><span t-field="address_id.name"/></div>
                                    <div>
                                        <span t-if="address_id.street"><span t-field="address_id.street"/> </span>
                                        <span t-if="address_id.street2"><span t-field="address_id.street2"/> </span>
                                    </div>
                                    <div>
                                        <span t-if="address_id.zip"><span t-field="address_id.zip"/> </span>
                                        <span t-if="address_id.city"><span t-field="address_id.city"/> </span>
                                        <span t-if="address_id.state_id">(<span t-field="address_id.state_id.code"/>) </span>
                                        <span t-if="address_id.country_id"><span t-field="address_id.country_id.name"/> </span>
                                    </div>
                                    <span t-if="doc.commercial_partner_id.fiscalcode">
                                        C.F. : <span t-field="doc.commercial_partner_id.fiscalcode"/>
                                    </span>
                                        VAT #: <span t-field="doc.commercial_partner_id.vat"/>
                                </span>
                            </t>
                        </div>
                    </div>
                    <div class="row" style="font-size: 8px;">
                        <div class="col-xs-5">
                            <div t-if="doc.payment_term_id">Payment terms:
                                <div t-if="doc.payment_term_id.note"><span t-field="doc.payment_term_id.note"/></div>
                                <div t-if="not doc.payment_term_id.note"><span t-field="doc.payment_term_id.name"/></div>
                            </div>
                            <t t-foreach="get_bank" t-as="bank">
                                BANK <span t-field="bank.bank_name"/>
<!--                                IBAN <span t-field="bank.iban"/>-->
                                - BIC/SWIFT <span t-field="bank.bank_bic"/>
                            </t>
                            <div t-if="check_installed_module('l10n_it_ricevute_bancarie_ext')">
                                <t t-foreach="get_bank_riba" t-as="bank_riba">
                                    Appoggio RI.BA.: <span t-field="bank_riba.name"/> - ABI: <span t-field="bank_riba.abi"/> CAB: <span t-field="bank_riba.cab"/>
                                </t>
                            </div>
                        </div>
                    </div>

                <table class="table table-condensed" style="font-size: 8px;">
                    <thead>
                        <tr>
                            <th>Code</th>
                            <th>Description</th>
                            <th class="text-right">Q.ty</th>
                            <th class="text-right">Amount</th>
                            <th>Discount %</th>
                            <th>VAT %</th>
                            <th class="text-right">Total Amount</th>
                        </tr>
                   </thead>
                   <tbody class="invoice_tbody">
                        <tr t-foreach="doc.invoice_line_ids" t-as="l">
                            <td>
                                <t t-if="l.product_id.code">
                                    <span t-field="l.product_id.code"/>
                                </t>
                            </td>
                            <td>
                                <span t-field="l.name"/>
<!--                                <if test="check_installed_module('partner_product_additional_description')">
<if test="line.invoice_id.partner_product_additional_description_id">
<line.invoice_id.partner_product_additional_description_id.name>
</if>
</if>-->
                            </td>
                            <td class="text-right">
                                <t t-if="l.quantity != 0.0">
                                    <span t-field="l.quantity"/>
                                    <span t-field="l.uom_id"/>
                                </t>
                            </td>
                            <td class="text-right">
                                <t t-if="l.price_unit != 0.0">
                                    <span t-field="l.price_unit" t-field-options='{"widget": "monetary", "display_currency": doc.currency_id}'/>
                                </t>
                            </td>
                            <td class="text-right">
                                <t t-if="l.discount != 0.00">
                                    <span t-esc="'%.2f'%(l.discount)"/>
                                </t>
                            </td>
                            <td class="text-right">
                                <t t-foreach="l.invoice_line_tax_ids" t-as="tax">
                                    <span t-esc="'%.0f'%(tax.amount * 100)"/>
                                </t>
                            </td>
                            <td class="text-right">
                                <t t-if="l.price_subtotal != 0.0">
                                    <span t-field="l.price_subtotal" t-field-options='{"widget": "monetary", "display_currency": doc.currency_id}'/>
                                </t>
                            </td>
                        </tr>
                    </tbody>
                </table>

                <div class="row">
                    <div class="col-xs-4 pull-right">
                        <table class="table table-condensed" style="font-size: 8pt;">
                            <tr class="border-black">
                                <td><strong>Total Without Taxes</strong></td>
                                <td class="text-right">
                                    <span t-field="doc.amount_untaxed"
                                        t-field-options='{"widget": "monetary", "display_currency": doc.currency_id}'/>
                                </td>
                            </tr>
                            <tr>
                                <td>Taxes</td>
                                <td class="text-right">
                                    <span t-field="doc.amount_tax"
                                        t-field-options='{"widget": "monetary", "display_currency": doc.currency_id}'/>
                                </td>
                            </tr>
                            <tr class="border-black">
                                <td><strong>Total</strong></td>
                                <td class="text-right">
                                    <span t-field="doc.amount_total"
                                        t-field-options='{"widget": "monetary", "display_currency": doc.currency_id}'/>
                                </td>
                            </tr>
                        </table>
                    </div>
                </div>
                <div style="font-size: 8px;">
                    <p t-field="doc.comment" />
                    <div t-field="doc.fiscal_position_id.note"/>
                    <t t-if="check_installed_module('account_fiscal_position_rule_partner')">
                        <t t-if="doc.account_fiscal_position_rule_id">
                            Come da vs. dichiarazione di intento n° <span t-field="doc.account_fiscal_position_rule_id.name"/> del
                            <span t-field="odoc.account_fiscal_position_rule_id.date_issue" t-field-options="date"/>
                            ricevuta in data <span t-field="doc.account_fiscal_position_rule_id.date_reception" t-field-options="date"/>
                            e protocollata al n° <span t-field="doc.account_fiscal_position_rule_id.number_protocol"/>.
                        </t>
                    </t>
                </div>
            </div>
        </t>
    </template>

    <template id="account_invoice_qweb">
        <t t-call="report.html_container">
            <t t-foreach="docs" t-as="doc">
                <t t-call="account_invoice_report_qweb.report_accountinvoice_document" t-lang="doc.partner_id.lang"/>
            </t>
        </t>
    </template>

</odoo>

<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="internal_layout_account"
              name="internal_layout_account"
              inherit_id="l10n_it_account.internal_layout">
        <xpath expr="//div[hasclass('footer')]/div/div/t[@t-if='not l10n_it_count_fiscal_year']/li" position="replace">
            <span t-esc="context_timestamp(datetime.datetime.now()).strftime('%Y')"/>
        </xpath>
    </template>
</odoo>

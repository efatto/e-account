<?xml version="1.0" encoding="utf-8"?>
<openerp>
<data>

    <record id="view_order_form_update_agents" model="ir.ui.view">
        <field name="name">sale.order.form.agents.update</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <field name="partner_shipping_id" position="after">
                <button string="Update agents to:" name="update_agents" type="object"
                help='Update agents in order lines, except the ones with service type in: trasport, other or contribution.'/>
                <field name="agents" widget="many2many_tags" nolabel="1" placeholder="Select one or more agents"/>
            </field>
        </field>
    </record>

</data>
</openerp>

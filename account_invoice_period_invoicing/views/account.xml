<?xml version="1.0" encoding="utf-8"?>
<openerp>
<data>
    <record id="view_account_period_form_invoicing" model="ir.ui.view">
        <field name="name">account.period.form.invoicing</field>
        <field name="model">account.period</field>
        <field name="inherit_id" ref="account.view_account_period_form"/>
        <field name="arch" type="xml">
            <field name="special" position="after">
                <field name="invoicing_closed"/>
            </field>
        </field>
    </record>
    <record id="view_account_journal_form_invoicing_period" model="ir.ui.view">
        <field name="name">account.journal.form.invoicing.period</field>
        <field name="model">account.journal</field>
        <field name="inherit_id" ref="account.view_account_journal_form"/>
        <field name="arch" type="xml">
            <field name="group_invoice_lines" position="after">
                <field name="invoicing_period_excluded"/>
            </field>
        </field>
    </record>
</data>
</openerp>

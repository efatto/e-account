<?xml version="1.0"?>
<openerp>
    <data>
        <record id="view_attendance_import" model="ir.ui.view">
            <field name="name">attendance.import.form</field>
            <field name="model">hr.attendance.import</field>
            <field name="arch" type="xml">
                <form string="Import Attendance">
                <label string="The file must have 3 column keys:
                'date' => for date of attendance
                'sign_in' => for sign in
                'sign_out' => for sign out." colspan="4"/>
                    <group colspan="4" col="4">
                        <field name="data" filename="name" colspan="4" />
                        <field name="date"/>
                        <field name="name" required="True"/>
                        <field name="delimeter"/>
                        <field name="hr_employee_id"/>
                    </group>
                   <separator string="" colspan="4"/>
                   <footer>
                        <button class="oe_highlight" special="cancel" string="Cancel"/>
                        <button name="action_import" string="Import" type="object"/>
                   </footer>
               </form>
            </field>
        </record>

        <record id="attendance_import_action" model="ir.actions.act_window">
            <field name="name">Import attendances</field>
            <field name="res_model">hr.attendance.import</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_attendance_import"/>
        </record>

        <menuitem action="attendance_import_action"
            id="menu_attendance_import_action"
            parent="hr_attendance.menu_hr_attendance" sequence="50" />
    </data>
</openerp>

<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="invoice_form_hide_bank" model="ir.ui.view">
        <field name="model">account.invoice</field>
        <field name="inherit_id" ref="account_invoice_report_qweb.invoice_form_hide_bank"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='display_reduced_price']" position="before">
                <field name="is_exportable_reduced_price" invisible="1"/>
            </xpath>
            <xpath expr="//field[@name='display_reduced_price']" position="attributes">
                <attribute name="attrs">{'readonly': [('is_exportable_reduced_price', '=', False)]}</attribute>
            </xpath>
        </field>
    </record>

</odoo>

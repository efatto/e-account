<?xml version="1.0" encoding="utf-8"?>
<openerp>
<data>

        <record id="corrispettivi_invoice_line_form_commission" model="ir.ui.view">
            <field name="model">account.invoice</field>
            <field name="inherit_id" ref="l10n_it_corrispettivi.corrispettivi_form"/>
            <field name="arch" type="xml">
                <field name="invoice_line" position="attributes">
                    <attribute name="context">{'partner_id': partner_id}</attribute>
                </field>
                <field name="date_invoice" position="after">
                    <field name="registration_date"/>
                </field>
                <xpath expr="//page[@string='Invoice Lines']/field[@name='invoice_line']/tree/field[@name='price_subtotal']" position="after">
                    <field name="commission_free"/>
                    <field name="agents"
                           attrs="{'readonly': [('commission_free', '=', True)]}"
                           widget="one2many_tags"
                    />
                </xpath>
                <field name="amount_total" position="after">
                    <field name="commission_total"
                           widget="monetary"
                           options="{'currency_field': 'currency_id'}"/>
                </field>
            </field>
        </record>

</data>
</openerp>

<?xml version="1.0" encoding="utf-8"?>
<openerp>
<data>

    <record id="invoice_form_update_discount" model="ir.ui.view">
        <field name="name">account.invoice.form.discount.update</field>
        <field name="model">account.invoice</field>
        <field name="inherit_id" ref="account.invoice_form"/>
        <field name="arch" type="xml">
            <field name="account_id" position="after">
                <group col="3" colspan="2">
                    <field name="discount" attrs="{'readonly':[('state','not in',['draft','proforma','proforma2'])]}"/>
                    <group>
                    <button string="Update discount" name="invoice_discount_update" type="object" icon="gtk-ok" attrs="{'invisible':[('state','not in',['draft','proforma','proforma2'])]}"/>
                    </group>
                </group>
            </field>
        </field>
    </record>

</data>
</openerp>

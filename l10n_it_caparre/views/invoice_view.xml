<?xml version="1.0" encoding="utf-8"?>
<openerp>
<data>

    <record id="invoice_form_caparra" model="ir.ui.view">
        <field name="name">account.invoice.caparra</field>
        <field name="model">account.invoice</field>
        <field name="inherit_id" ref="account.invoice_form"/>
        <field name="arch" type="xml">
            <field name="journal_id" position="after">
                <field name="caparra"/>
            </field>
            <label string="Draft Invoice" position="attributes">
                <attribute name="attrs">{'invisible': ['|','|',('state','not in',('draft',)), ('type','&lt;&gt;','out_invoice'), ('caparra', '=', True)]}</attribute>
            </label>
            <label string="Draft Refund"  position="attributes">
                <attribute name="attrs">{'invisible': ['|','|',('state','not in',('draft',)), ('type','&lt;&gt;','out_refund'), ('caparra', '=', True)]}</attribute>
            </label>
            <label string="Pro Forma Invoice"  position="attributes">
                <attribute name="attrs">{'invisible': ['|',('state','not in',('proforma','proforma2')), ('caparra', '=', True)]}</attribute>
            </label>
            <label string="Invoice"  position="attributes">
                <attribute name="attrs">{'invisible': ['|','|',('state','in',('draft','proforma','proforma2')), ('type','&lt;&gt;','out_invoice'), ('caparra', '=', True)]}</attribute>
            </label>
            <label string="Refund"  position="attributes">
                <attribute name="attrs">{'invisible': ['|','|',('state','in',('draft','proforma','proforma2')), ('type','&lt;&gt;','out_refund'), ('caparra', '=', True)]}</attribute>
            </label>
            <field name="number" position="before">
                <label string="Caparra" attrs="{'invisible': [('caparra', '&lt;&gt;', True)]}"/>
            </field>
        </field>
    </record>

</data>
</openerp>

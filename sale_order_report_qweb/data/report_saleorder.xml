<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="external_layout">
        <!-- Multicompany -->
        <t t-if="not o and doc">
            <t t-set="o" t-value="doc"/>
        </t>
        <t t-if="o and 'company_id' in o">
            <t t-set="company" t-value="o.company_id"></t>
        </t>
        <t t-if="not o or not 'company_id' in o">
            <t t-set="company" t-value="res_company"></t>
        </t>

        <t t-call="sale_order_report_qweb.external_layout_header" />
        <t t-raw="0" />
    <!--    <t t-call="report.external_layout_footer" />-->
    </template>
    <template id="external_layout_header">
        <div class="header">
            <div class="row">
                <div class="col-xs-5" id="logo">
                    <img t-if="company.logo" t-att-src="'data:image/png;base64,%s' % company.logo" style="max-height: 30px;"/>
                </div>
                <div class="col-xs-1"/>
                <div class="col-xs-2 g_cell">
                    <strong>DATE</strong><br/>
                    <span t-field="o.date_order"
                        t-field-options='{"format": "dd/MM/yyyy"}' />
                </div>
                <div class="col-xs-3 g_cell">
                    <strong><t t-if="o.state == 'draft'">QUOTATION</t>
                            <t t-if="o.state != 'draft'">ORDER</t></strong><br/>
                    <span t-field="o.name"/>
                </div>
                <div class="col-xs-1 g_cell">
                    <strong>PAG.</strong><br/>
                    <div style="text-align: left !important;">
                        <span class="page"/>/<span class="topage"/>
                    </div>
                </div>
            </div>
            <p/>
            <div class="row" style="font-size: 8px;">
                <div class="col-xs-5">
                    <t t-if="not company.custom_footer">
                        <div t-field="company.partner_id"
                            t-field-options='{"widget": "contact", "fields": ["address", "name"], "no_marker": true}'
                            style="border-bottom: 1px solid black;"
                            class="pull-left"
                        />
                    </t>
                    <t t-if="company.custom_footer">
                        <span t-field="company.rml_footer" class="pull-left"/>
                    </t>
                </div>
            </div>
            <p/>
        </div>
    </template>

    <template id="sale_order_report_qweb.report_saleorder_document">
        <t t-call="sale_order_report_qweb.external_layout">
            <t t-set="doc" t-value="doc.with_context({'lang':doc.partner_id.lang})" />
            <div class="page">
                <div class="oe_structure"/>
                <div class="row">
                    <div class="col-xs-5">
                    </div>
                    <div class="col-xs-1">
                    </div>
                    <div class="col-xs-6 g_cell">
                        <span t-if="doc.partner_shipping_id">
                            <strong>SHIPPING ADDRESS:</strong>
                            <div t-if="doc.partner_shipping_id.name"><span t-field="doc.partner_shipping_id.name"/></div>
                            <div>
                                <span t-if="doc.partner_shipping_id.street"><span t-field="doc.partner_shipping_id.street"/> </span>
                                <span t-if="doc.partner_shipping_id.street2"><span t-field="doc.partner_shipping_id.street2"/> </span>
                            </div>
                            <div>
                                <span t-if="doc.partner_shipping_id.zip"><span t-field="doc.partner_shipping_id.zip"/> </span>
                                <span t-if="doc.partner_shipping_id.city"><span t-field="doc.partner_shipping_id.city"/> </span>
                                <span t-if="doc.partner_shipping_id.state_id">(<span t-field="doc.partner_shipping_id.state_id.code"/>) </span>
                                <span t-if="doc.partner_shipping_id.country_id"><span t-field="doc.partner_shipping_id.country_id.name"/> </span>
                            </div>
                        </span>
                    </div>
                </div>
                <p/>
                <div class="row">
                    <div class="col-xs-5">
                        <t t-as="address_id" t-foreach="address_invoice_id[0]">
                            <div t-if="address_id != doc.partner_id">
                                <div class="g_cell">
                                    <strong>REGISTERED OFFICE:</strong>
                                    <div t-if="doc.partner_id.name"><span t-field="doc.partner_id.name"/></div>
                                    <div>
                                        <span t-if="doc.partner_id.street"><span t-field="doc.partner_id.street"/> </span>
                                        <span t-if="doc.partner_id.street2"><span t-field="doc.partner_id.street2"/> </span>
                                    </div>
                                    <div>
                                        <span t-if="doc.partner_id.zip"><span t-field="doc.partner_id.zip"/> </span>
                                        <span t-if="doc.partner_id.city"><span t-field="doc.partner_id.city"/> </span>
                                        <span t-if="doc.partner_id.state_id">(<span t-field="doc.partner_id.state_id.code"/>) </span>
                                        <span t-if="doc.partner_id.country_id"><span t-field="doc.partner_id.country_id.name"/> </span>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </div>
                    <div class="col-xs-1">
                    </div>
                    <div class="col-xs-6 g_cell">
                        <span t-if="doc.partner_invoice_id">
                            <strong>BILLING ADDRESS:</strong>
                            <div t-if="doc.partner_invoice_id.name"><span t-field="doc.partner_invoice_id.name"/></div>
                            <div>
                                <span t-if="doc.partner_invoice_id.street"><span t-field="doc.partner_invoice_id.street"/> </span>
                                <span t-if="doc.partner_invoice_id.street2"><span t-field="doc.partner_invoice_id.street2"/> </span>
                            </div>
                            <div>
                                <span t-if="doc.partner_invoice_id.zip"><span t-field="doc.partner_invoice_id.zip"/> </span>
                                <span t-if="doc.partner_invoice_id.city"><span t-field="doc.partner_invoice_id.city"/> </span>
                                <span t-if="doc.partner_invoice_id.state_id">(<span t-field="doc.partner_invoice_id.state_id.code"/>) </span>
                                <span t-if="doc.partner_invoice_id.country_id"><span t-field="doc.partner_invoice_id.country_id.name"/> </span>
                            </div>
                            <span t-if="doc.partner_id.fiscalcode">
                                C.F. : <span t-field="doc.partner_id.fiscalcode"/>
                            </span>
                                VAT #: <span t-field="doc.partner_id.vat"/>
                        </span>
                    </div>
                </div>
                <div class="row" style="font-size: 8px;">
                    <div class="col-xs-5">
                        <div t-if="doc.payment_term_id">Payment terms:
                            <div t-if="doc.payment_term_id.note"><span t-field="doc.payment_term_id.note"/></div>
                            <div t-if="not doc.payment_term_id.note"><span t-field="doc.payment_term_id.name"/></div>
                        </div>
                        <t t-foreach="get_bank" t-as="bank">
                            BANK <span t-field="bank.bank_name"/>
<!--                                IBAN <span t-field="bank.iban"/>-->
                            - BIC/SWIFT <span t-field="bank.bank_bic"/>
                        </t>
                        <div t-if="check_installed_module('l10n_it_ricevute_bancarie_ext')">
                            <t t-foreach="get_bank_riba" t-as="bank_riba">
                                Appoggio RI.BA.: <span t-field="bank_riba.name"/> - ABI: <span t-field="bank_riba.abi"/> CAB: <span t-field="bank_riba.cab"/>
                            </t>
                        </div>
                    </div>
                </div>

                <!-- Is there a discount on at least one line? -->
                <t t-set="display_discount" t-value="any([l.discount for l in doc.order_line])"/>

                <t t-foreach="doc.order_lines_layouted()" t-as="page">
                    <table class="table table-condensed" style="font-size: 10px;">
                        <thead>
                            <tr>
                                <th>Code</th>
                                <th>Description</th>
                                <th class="text-right">Q.ty</th>
                                <th class="text-right">
                                    <t t-if="not doc.print_hide_prices">
                                        Amount
                                    </t>
                                </th>
                                <th groups="sale.group_discount_per_so_line">Discount %</th>
                                <t t-if="check_installed_module('sale_order_price_unit_net')">
                                    <t t-if="not doc.print_hide_prices">
                                        <th class="text-right">Net Amount</th>
                                    </t>
                                </t>
                                <th>
                                    <t t-if="not doc.print_hide_prices">
                                        VAT
                                    </t>
                                </th>
                                <th class="text-right">Total Amount</th>
                            </tr>
                       </thead>
                       <tbody class="sale_tbody">
                            <t t-foreach="page" t-as="layout_category">

                                <t t-if="layout_category_size > 1 or page_size > 1" groups="sale.group_sale_layout">
                                    <tr class="active">
                                        <td colspan="7" style="font-weight: bold; border-bottom: 1px solid black;">&amp;bull;
                                            <t t-esc="layout_category['name']"/>
                                        </td>
                                    </tr>
                                </t>

                                <!-- Lines associated -->
                                <t t-foreach="layout_category['lines']" t-as="l">
                                    <tr>
                                        <td>
                                            <span t-field="l.product_id.code"/>
                                        </td>
                                        <td>
                                            <span t-field="l.name"/>
                                            <t t-if="check_installed_module('partner_product_additional_description')">
                                                <t t-if="l.order_id.partner_product_additional_description_id">
                                                    <span t-field="l.order_id.partner_product_additional_description_id.name"/>
                                                </t>
                                            </t>
                                        </td>
                                        <td class="text-right">
                                            <t t-if="l.product_uom_qty != 0.0">
                                                <span t-field="l.product_uom_qty"/>
                                                <span t-field="l.product_uom"/>
                                            </t>
                                        </td>
                                        <td class="text-right">
                                            <t t-if="not doc.print_hide_prices and l.price_unit != 0.0">
                                                <span t-field="l.price_unit" t-options='{"widget": "monetary", "display_currency": doc.pricelist_id.currency_id}'/>
                                            </t>
                                        </td>
                                        <td class="text-right">
                                            <t t-if="not doc.print_hide_prices and l.discount != 0.00">
                                                <span t-field="l.discount"/>
                                            </t>
                                        </td>
                                        <t t-if="check_installed_module('sale_order_price_unit_net')">
                                            <t t-if="not doc.print_hide_prices and l.product_uom_qty != 0.0">
                                                <td class="text-right">
                                                    <span t-field="l.sale_price_unit_net" t-field-options='{"widget": "monetary", "display_currency": doc.pricelist_id.currency_id}'/>
                                                </td>
                                            </t>
                                        </t>
                                        <td class="text-right">
                                            <t t-if="not doc.print_hide_prices">
                                                <t t-foreach="l.tax_id" t-as="tax">
                                                    <span t-esc="'%.0f'%(tax.amount)"/> %
                                                </t>
                                            </t>
                                        </td>
                                        <td class="text-right">
                                            <t t-if="not doc.print_hide_prices and l.product_uom_qty != 0.00">
                                                <span t-field="l.price_subtotal" t-options='{"widget": "monetary", "display_currency": doc.pricelist_id.currency_id}'/>
                                            </t>
                                        </td>
                                    </tr>
                                </t>

                                <t t-if="(layout_category_size > 1 or page_size > 1) and layout_category['subtotal']" groups="sale.group_sale_layout">
                                    <tr class="text-right">
                                        <td colspan="6">
                                            <strong>Subtotal: </strong>
                                            <t t-set="subtotal" t-value="sum(line.price_subtotal for line in layout_category['lines'])"/>
                                            <span t-esc="subtotal" t-options="{'widget': 'monetary', 'display_currency': doc.pricelist_id.currency_id}"/>
                                        </td>
                                    </tr>
                                </t>

                            </t>
                        </tbody>
                    </table>

                    <t t-if="page_index &lt; page_size - 1" groups="sale.group_sale_layout">
                        <p style="page-break-before:always;"> </p>
                    </t>
                </t>

                <div class="row" name="total">
                    <div class="col-xs-4 pull-right">
                        <table class="table table-condensed" style="font-size: 10px;">
                            <tr class="border-black">
                                <td><strong>Total Without Taxes</strong></td>
                                <td class="text-right">
                                    <span t-field="doc.amount_untaxed"
                                        t-options='{"widget": "monetary", "display_currency": doc.pricelist_id.currency_id}'/>
                                </td>
                            </tr>
                            <t t-foreach="doc._get_tax_amount_by_group()" t-as="amount_by_group">
                                <tr>
                                    <td><span t-esc="amount_by_group[0] or 'Taxes'"/></td>
                                    <td class="text-right">
                                        <span t-esc="amount_by_group[1]"
                                            t-options='{"widget": "monetary", "display_currency": doc.pricelist_id.currency_id}'/>
                                    </td>
                                </tr>
                            </t>
                            <tr class="border-black">
                                <td><strong>Total</strong></td>
                                <td class="text-right">
                                    <span t-field="doc.amount_total"
                                        t-options='{"widget": "monetary", "display_currency": doc.pricelist_id.currency_id}'/>
                                </td>
                            </tr>
                        </table>
                    </div>
                </div>
                <div style="font-size: 10px;">
                    <p t-field="doc.note" />
                    <t t-if="doc.incoterm">
                         TRANSPORT: <span t-field="doc.incoterm.name"/>
                    </t>
                    <t t-if="check_installed_module('delivery')">
                        <t t-if="doc.carrier_id">
                            <span t-field="doc.carrier_id.name"/>
                        </t>
                    </t>
                    <div t-field="doc.fiscal_position_id.note"/>
                    <t t-if="check_installed_module('account_fiscal_position_rule_partner')">
                        <t t-if="doc.account_fiscal_position_rule_id">
                            Come da vs. dichiarazione di intento n° <span t-field="doc.account_fiscal_position_rule_id.name"/> del
                            <span t-field="doc.account_fiscal_position_rule_id.date_issue" t-field-options="date"/>
                            ricevuta in data <span t-field="doc.account_fiscal_position_rule_id.date_reception" t-field-options="date"/>
                            e protocollata al n° <span t-field="doc.account_fiscal_position_rule_id.number_protocol"/>.
                        </t>
                    </t>
                </div>
                <div class="oe_structure"/>
            </div>
        </t>
    </template>

    <template id="sale_order_qweb">
        <t t-call="report.html_container">
            <t t-foreach="docs" t-as="doc">
                <t t-call="sale_order_report_qweb.report_saleorder_document" t-lang="doc.partner_id.lang"/>
            </t>
        </t>
    </template>

</odoo>

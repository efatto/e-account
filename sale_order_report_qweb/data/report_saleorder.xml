<?xml version="1.0" encoding="utf-8"?>
<openerp>
<data>
    <template id="sale_order_report_qweb.external_layout">
    <!-- Multicompany -->
    <t t-if="o and 'company_id' in o">
        <t t-set="company" t-value="o.company_id"></t>
    </t>
    <t t-if="not o or not 'company_id' in o">
        <t t-set="company" t-value="res_company"></t>
    </t>

    <t t-call="sale_order_report_qweb.external_layout_header" />
    <t t-raw="0" />
<!--    <t t-call="report.external_layout_footer" />-->
    </template>
    <template id="sale_order_report_qweb.external_layout_header">
        <div class="header">
            <div class="row">
                <div class="col-xs-5" id="logo">
                    <img t-attf-src="data:image/*;base64,{{company.logo}}" style="max-height:30px;"/>
                </div>
                <div class="col-xs-1"/>
                <div class="col-xs-2 g_cell">
                    <strong>DATE</strong><br/>
                    <span t-field="o.date_order"
                        t-field-options='{"format": "dd/MM/yyyy"}' />
                </div>
                <div class="col-xs-3 g_cell">
                    <strong>
                        <span t-if="o.state not in ['draft','sent']">ORDER </span>
                        <span t-if="o.state in ['draft','sent']">QUOTATION </span>
                    </strong><br/>
                    <span t-field="o.name"/>
                </div>
                <div class="col-xs-1 g_cell">
                    <strong>PAG.</strong><br/>
                    <div style="text-align: left !important;">
                        <span class="page"/>/<span class="topage"/>
                    </div>
                </div>
            </div>
            <p/>
            <div class="row" style="font-size: 8px;">
                <div class="col-xs-5">
                    <t t-if="not company.custom_footer">
                        <div t-field="company.partner_id"
                            t-field-options='{"widget": "contact", "fields": ["address", "name"], "no_marker": true}'
                            style="border-bottom: 1px solid black;"
                            class="pull-left"
                        />
                    </t>
                    <t t-if="company.custom_footer">
                        <span t-field="company.rml_footer" class="pull-left"/>
                    </t>
                </div>
            </div>
            <p/>
        </div>
    </template>

    <template id="sale_order_report_qweb.report_saleorder_document">
        <span t-call="sale_order_report_qweb.external_layout">
            <div class="page">
                <div class="oe_structure"/>
                    <div class="row">
                        <div class="col-xs-5">
                        </div>
                        <div class="col-xs-1">
                        </div>
                        <div class="col-xs-6 g_cell">
                            <span t-if="o.partner_shipping_id">
                                <strong>SHIPPING ADDRESS:</strong>
                                <div t-if="o.partner_shipping_id.name"><span t-field="o.partner_shipping_id.name"/></div>
                                <div>
                                    <span t-if="o.partner_shipping_id.street"><span t-field="o.partner_shipping_id.street"/> </span>
                                    <span t-if="o.partner_shipping_id.street2"><span t-field="o.partner_shipping_id.street2"/> </span>
                                </div>
                                <div>
                                    <span t-if="o.partner_shipping_id.zip"><span t-field="o.partner_shipping_id.zip"/> </span>
                                    <span t-if="o.partner_shipping_id.city"><span t-field="o.partner_shipping_id.city"/> </span>
                                    <span t-if="o.partner_shipping_id.state_id">(<span t-field="o.partner_shipping_id.state_id.code"/>) </span>
                                    <span t-if="o.partner_shipping_id.country_id"><span t-field="o.partner_shipping_id.country_id.name"/> </span>
                                </div>
                            </span>
                        </div>
                    </div>
                    <p/>
                    <div class="row">
                        <div class="col-xs-5">
                            <t t-as="address_id" t-foreach="address_invoice_id[0]">
                                <div t-if="address_id != o.partner_id">
                                    <div class="g_cell">
                                        <strong>REGISTERED OFFICE:</strong>
                                        <div t-if="o.partner_id.name"><span t-field="o.partner_id.name"/></div>
                                        <div>
                                            <span t-if="o.partner_id.street"><span t-field="o.partner_id.street"/> </span>
                                            <span t-if="o.partner_id.street2"><span t-field="o.partner_id.street2"/> </span>
                                        </div>
                                        <div>
                                            <span t-if="o.partner_id.zip"><span t-field="o.partner_id.zip"/> </span>
                                            <span t-if="o.partner_id.city"><span t-field="o.partner_id.city"/> </span>
                                            <span t-if="o.partner_id.state_id">(<span t-field="o.partner_id.state_id.code"/>) </span>
                                            <span t-if="o.partner_id.country_id"><span t-field="o.partner_id.country_id.name"/> </span>
                                        </div>
                                    </div>
                                </div>
                            </t>
                        </div>
                        <div class="col-xs-1">
                        </div>
                        <div class="col-xs-6 g_cell">
                            <span t-if="o.partner_invoice_id">
                                <strong>BILLING ADDRESS:</strong>
                                <div t-if="o.partner_invoice_id.name"><span t-field="o.partner_invoice_id.name"/></div>
                                <div>
                                    <span t-if="o.partner_invoice_id.street"><span t-field="o.partner_invoice_id.street"/> </span>
                                    <span t-if="o.partner_invoice_id.street2"><span t-field="o.partner_invoice_id.street2"/> </span>
                                </div>
                                <div>
                                    <span t-if="o.partner_invoice_id.zip"><span t-field="o.partner_invoice_id.zip"/> </span>
                                    <span t-if="o.partner_invoice_id.city"><span t-field="o.partner_invoice_id.city"/> </span>
                                    <span t-if="o.partner_invoice_id.state_id">(<span t-field="o.partner_invoice_id.state_id.code"/>) </span>
                                    <span t-if="o.partner_invoice_id.country_id"><span t-field="o.partner_invoice_id.country_id.name"/> </span>
                                </div>
                                <span t-if="o.partner_id.fiscalcode">
                                    C.F. : <span t-field="o.partner_id.fiscalcode"/>
                                </span>
                                    VAT #: <span t-field="o.partner_id.vat"/>
                            </span>
                        </div>
                    </div>
                    <div class="row" style="font-size: 8px;">
                        <div class="col-xs-5">
                            <div t-if="o.payment_term">Payment terms:
                                <div t-if="o.payment_term.note"><span t-field="o.payment_term.note"/></div>
                                <div t-if="not o.payment_term.note"><span t-field="o.payment_term.name"/></div>
                            </div>
                            <t t-foreach="get_bank" t-as="bank">
                                BANK <span t-field="bank.bank_name"/>
                                IBAN <span t-field="bank.iban"/> - BIC/SWIFT <span t-field="bank.bank_bic"/>
                            </t>
                            <div t-if="check_installed_module('l10n_it_ricevute_bancarie_ext')">
                                <t t-foreach="get_bank_riba" t-as="bank_riba">
                                    Appoggio RI.BA.: <span t-field="bank_riba.name"/> - ABI: <span t-field="bank_riba.abi"/> CAB: <span t-field="bank_riba.cab"/>
                                </t>
                            </div>
                        </div>
                    </div>

                <table class="table table-condensed" style="font-size: 8px;">
                    <thead>
                        <tr>
                            <th>Code</th>
                            <th>Description</th>
                            <th class="text-right">Q.ty</th>
                            <th class="text-right">
                                <t t-if="not o.print_hide_prices">
                                    Amount <span t-field="o.pricelist_id.currency_id.symbol"/>
                                </t>
                            </th>
                            <th groups="sale.group_discount_per_so_line">Discount %</th>
                            <t t-if="check_installed_module('sale_order_price_unit_net')">
                                <t t-if="not o.print_hide_prices">
                                    <th class="text-right">Net Amount <span t-field="o.pricelist_id.currency_id.symbol"/></th>
                                </t>
                            </t>
                            <th>
                                <t t-if="not o.print_hide_prices">
                                    VAT
                                </t>
                            </th>
                            <th class="text-right">Total Amount <span t-field="o.pricelist_id.currency_id.symbol"/></th>
                        </tr>
                   </thead>
                   <tbody class="sale_tbody">
                        <tr t-foreach="o.order_line" t-as="l">
                            <td>
                                <span t-field="l.product_id.code"/>
                            </td>
                            <td>
                                <span t-field="l.name"/>
                                <t t-if="check_installed_module('partner_product_additional_description')">
                                    <t t-if="l.order_id.partner_product_additional_description_id">
                                        <span t-field="l.order_id.partner_product_additional_description_id.name"/>
                                    </t>
                                </t>
                            </td>
                            <td class="text-right">
                                <t t-if="l.product_uom_qty != 0.0">
                                    <span t-field="l.product_uom_qty"/>
                                    <span t-field="l.product_uom"/>
                                </t>
                            </td>
                            <td class="text-right">
                                <t t-if="not o.print_hide_prices and l.price_unit != 0.0">
                                    <span t-esc="'%.2f'%(l.price_unit)"/>
                                </t>
                            </td>
                            <td class="text-right">
                                <t t-if="not o.print_hide_prices and l.discount != 0.00">
                                    <span t-esc="'%.1f'%(l.discount)"/>
                                </t>
                            </td>
                            <t t-if="check_installed_module('sale_order_price_unit_net')">
                                <t t-if="not o.print_hide_prices and l.product_uom_qty != 0.0">
                                    <td class="text-right">
                                        <span t-esc="'%.2f'%(l.sale_price_unit_net)"/>
                                    </td>
                                </t>
                            </t>
                            <td class="text-right">
                                <t t-if="not o.print_hide_prices">
                                    <t t-foreach="l.tax_id" t-as="tax">
                                        <span t-esc="'%.0f'%(tax.amount * 100)"/> %
                                    </t>
                                </t>
                            </td>
                            <td class="text-right">
                                <t t-if="not o.print_hide_prices and l.product_uom_qty != 0.0">
                                    <span t-esc="'%.2f'%(l.price_subtotal)"/>
                                </t>
                            </td>
                        </tr>
                    </tbody>
                </table>

                <div class="row">
                    <div class="col-xs-4 pull-right">
                        <table class="table table-condensed" style="font-size: 8pt;">
                            <tr class="border-black">
                                <td><strong>Total Without Taxes</strong></td>
                                <td class="text-right">
                                    <span t-field="o.amount_untaxed"
                                        t-field-options='{"widget": "monetary", "display_currency": "o.pricelist_id.currency_id"}'/>
                                </td>
                            </tr>
                            <tr>
                                <td>Taxes</td>
                                <td class="text-right">
                                    <span t-field="o.amount_tax"
                                        t-field-options='{"widget": "monetary", "display_currency": "o.pricelist_id.currency_id"}'/>
                                </td>
                            </tr>
                            <tr class="border-black">
                                <td><strong>Total</strong></td>
                                <td class="text-right">
                                    <span t-field="o.amount_total"
                                        t-field-options='{"widget": "monetary", "display_currency": "o.pricelist_id.currency_id"}'/>
                                </td>
                            </tr>
                        </table>
                    </div>
                </div>
                <div style="font-size: 8px;">
                    <p t-field="o.note" />
                    <t t-if="o.incoterm">
                         TRANSPORT: <span t-field="o.incoterm.name"/>
                    </t>
                    <t t-if="check_installed_module('delivery')">
                        <t t-if="o.carrier_id">
                            <span t-field="o.carrier_id.name"/>
                        </t>
                    </t>
                    <div t-field="o.fiscal_position.note"/>
                    <t t-if="check_installed_module('account_fiscal_position_rule_partner')">
                        <t t-if="o.account_fiscal_position_rule_id">
                            Come da vs. dichiarazione di intento n° <span t-field="o.account_fiscal_position_rule_id.name"/> del
                            <span t-field="o.account_fiscal_position_rule_id.date_issue" t-field-options="date"/>
                            ricevuta in data <span t-field="o.account_fiscal_position_rule_id.date_reception" t-field-options="date"/>
                            e protocollata al n° <span t-field="o.account_fiscal_position_rule_id.number_protocol"/>.
                        </t>
                    </t>
                </div>
            </div>
        </span>
    </template>

    <template id="sale_order_qweb">
        <t t-call="report.html_container">
            <t t-foreach="doc_ids" t-as="doc_id">
                <t t-raw="translate_doc(doc_id, doc_model, 'partner_id.lang', 'sale_order_report_qweb.report_saleorder_document')"/>
            </t>
        </t>
    </template>
</data>
</openerp>

<?xml version="1.0" encoding="utf-8"?>
<openerp>
  <data>
        <record id="view_invoice_form_delivery" model="ir.ui.view">
            <field name="name">account.invoice.form.delivery</field>
            <field name="model">account.invoice</field>
            <field name="inherit_id" ref="account.invoice_form"/>
            <field name="arch" type="xml">
                <xpath expr="//notebook/page[@string='Invoice Lines']/group[2]" position="after">
                    <group style="width: 65%%">
                        <label for="delivery_carrier_id"/>
                        <div>
                            <field name="delivery_carrier_id" context="{'invoice_id':active_id or False}" class="oe_inline"/>
                            <button name="delivery_set" string="Add in Quote" type="object"
                                class="oe_edit_only"
                                attrs="{'invisible':['|',('delivery_carrier_id','=',False),('state','not in',('draft','sent'))]}"/>
                        </div>
                    </group>
                </xpath>
            </field>
        </record>
  </data>
</openerp>

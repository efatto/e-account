<?xml version="1.0" encoding="utf-8"?>
<openerp>
  <data>

    <record id="view_sale_advance_payment_inv_sal" model="ir.ui.view">
        <field name="name">Invoice Order Advance Payment SAL</field>
        <field name="model">sale.advance.payment.inv</field>
        <field name="inherit_id" ref="sale_advance_invoice.view_sale_advance_payment_inv_inh"/>
        <field name="arch" type="xml">
                <field name="order_line_ids" position="after">
                <field name="order_id" invisible="1"/>
                <field name="project_id" invisible="1"/>
                <field name="sal_id"
                       attrs="{'invisible': [('advance_payment_method','!=','percentage')]}"
                       domain="[('account_analytic_id', '=', project_id)]"/>
                </field>
        </field>
    </record>
    <record id="view_sale_order_line_make_invoice_sal" model="ir.ui.view">
        <field name="name">Sales OrderLine Make Invoice SAL</field>
        <field name="model">sale.order.line.make.invoice</field>
        <field name="inherit_id" ref="sale.view_sale_order_line_make_invoice"/>
        <field name="arch" type="xml">
         <p class="oe_grey" position="after">
            <field name="project_id" invisible="0"/>
            <field name="sal_id"
                   domain="[('account_analytic_id', '=', project_id)]"
                   attrs="{'invisible': [('project_id','=', False)]}"/>
         </p>
      </field>
    </record>
  </data>
</openerp>

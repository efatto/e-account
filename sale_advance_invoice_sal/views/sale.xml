<?xml version="1.0" encoding="utf-8"?>
<openerp>
  <data>

    <record id="view_sale_advance_payment_inv_sal" model="ir.ui.view">
        <field name="name">Invoice Order Advance Payment SAL</field>
        <field name="model">sale.advance.payment.inv</field>
        <field name="inherit_id" ref="sale.view_sale_advance_payment_inv"/>
        <field name="arch" type="xml">
            <field name="amount" position="before">
                <field name="order_line_ids"></field>
                <field name="order_id" invisible="1"></field>
                <field name="project_id" invisible="1"></field>
                <field name="sal_id" domain="[('account_analytic_id', '=', project_id)]"></field>
            </field>
        </field>
    </record>
  </data>
</openerp>

<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data noupdate="0">
    
        <!--Email template -->
        <record id="email_invoice_commission" model="email.template">
            <field name="name">Report Invoice Commission</field>
            <field name="email_from">${(object.user_id.email or object.company_id.email or 'noreply@localhost')|safe}</field>
            <field name="subject">Report Invoice Commission</field>
            <field name="email_to">${object.agent_ids[0].email}</field>
            <field name="model_id" ref="account.model_account_invoice"/>
            <field name="auto_delete" eval="True"/>
            <field name="report_template" ref="account_invoice_commission_report.report_account_invoice_commission"/>
            <field name="report_name">Commission</field>
            <field name="body_html"><![CDATA[
    <div style="font-family: 'Lucica Grande', Ubuntu, Arial, Verdana, sans-serif; font-size: 12px; color: rgb(34, 34, 34); background-color: #FFF; ">
    <p>Hello </p>

    <p>You will find attached commission invoices report.</p>

    <p>Thanks</p>

    </div>            
            ]]></field>
        </record>

        <act_window name="Send report invoice commission"
            res_model="mail.compose.message"
            src_model="account.invoice"
            view_mode="form"
            multi="True"
            target="new"
            key2="client_action_multi"
            id="action_send_report_invoice_commission"
            view_type="form"
            context="{'default_template_id': ref('account_invoice_commission_report.email_invoice_commission'),
            'default_active_ids': active_ids,}"/>

    </data>
</openerp>               
                
<?xml version="1.0" encoding="utf-8"?>
<odoo noupdate="1">
    <record forcecreate="True" id="ir_cron_reserve_mrp_production" model="ir.cron">
        <field name="name">Reserve MRP Productions</field>
        <field name="interval_number">1</field>
        <field name="interval_type">days</field>
        <field name="numbercall">-1</field>
        <field name="active" eval="True" />
        <field name="model_id" ref="mrp.model_mrp_production"/>
        <field name="nextcall" eval="datetime.now().replace(hour=21, minute=0, second=0).strftime('%Y-%m-%d %H:%M:%S')" />
        <field name="code">model.search([('state', 'in', ['confirmed', 'planned']), ('availability', 'in', ['partially_available', 'waiting'])]).action_assign()</field>
        <field name="doall" eval="False"/>
    </record>
</odoo>

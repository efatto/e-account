<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

    <template id="due_list_layout">
        <t t-set="company" t-value="res_company" />
        <t t-call="report.external_layout_header" />
        <t t-raw="0" />
    </template>

    <template id="account_due_list_report_qweb.duelist_qweb">

        <style type="text/css">
            p {
                font-size: 11px;
                margin-bottom: 0px;
                }
            .doc_data {
                font-size: 11px;
                font-weight: bold;
                text-align: right;
                }
            .due_list_title {
                font-size: 15px;
                font-weight: bold;
                }
            .with_bord {
                border:1px solid #ddd;
                padding-bottom:3px;
                margin-bottom:5px;
                }
            .signature { min-height: 2em; }
            address { font-size: 11px; }
        </style>

        <t t-call="report.html_container">

            <t t-call="account_due_list_report_qweb.due_list_layout">
                <div class="page">

                    <div id="due_list_title" class="row with_bord" style="padding: 2px;">
                        <p class="due_list_title">
                            DUE LIST
                        </p>
                    </div>
                    <t t-set="tot_amount" t-value="0" />
                    <t t-as="maturity_date" t-foreach="get_group[1]">
                    <div class="row">
                        <table id="duelist_details" class="table table-bordered table-responsive">
                            <thead>
                                <tr>
                                    <td colspan="6" style="font-size: 14px;">
                                            <p>Settlement of <span t-esc="maturity_date"/></p>
                                        </td>
                                    </tr>
                                <tr>
                                    <th style="width: 5cm;">
                                        <p>Partner</p>
                                    </th>
                                    <th style="width: 2cm;">
                                        <p>Due Date</p>
                                    </th>
                                    <th style="width: 4cm;">
                                        <p>Invoice</p>
                                    </th>
                                    <th style="width: 4cm;">
                                        <p>Payment</p>
                                    </th>
                                    <th style="width: 2cm;">
                                        <p>Maturity Residual</p>
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                <t t-set="tot_residual" t-value="0" />
                                <t t-set="nr" t-value="0"/>
                                <tr t-foreach="get_group[0][maturity_date]" t-as="line">
                                    <td style="width: 5cm;">
                                        <p><span t-field="line.partner_id.name" /></p>
                                    </td>
                                    <td style="width: 2cm;">
                                        <p><span t-field="line.date_maturity" /></p>
                                    </td>
                                    <td style="width: 4cm;">
                                        <p><span t-esc="line.invoice_id.reference or line.invoice_id.number" /> -
                                            <span t-field="line.invoice_id.date_invoice"/> </p>
                                    </td>
                                    <td style="width: 4cm;">
                                        <p><span t-field="line.invoice_id.payment_term_id" /></p>
                                    </td>
                                    <td class="text-right" style="width: 2cm;">
                                        <p><span t-field="line.amount_residual"
                                        t-field-options='{"widget": "monetary", "display_currency": line.move_id.company_id.currency_id}'/></p>
                                    </td>
                                    <t t-set="tot_amount" t-value="tot_amount + line.amount_residual" />
                                     <t t-set="tot_residual" t-value="tot_residual + line.amount_residual" />
                                </tr>
                                <tr>
                                    <td style="width: 5cm;"/>
                                    <td style="width: 2cm;"/>
                                    <td style="width: 4cm;"/>
                                    <td style="width: 4cm;"><p>Total</p></td>
                                    <td class="text-right" style="width: 2cm;">
                                        <p><span t-esc="tot_residual"
                                            t-esc-options='{"widget": "monetary", "display_currency": docs[0].move_id.company_id.currency_id}'/>
                                        </p>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>

                    </t>
                    <div id="total" class="row with_bord text-right" style="padding: 2px;">
                        <strong><p>TOTAL   <span t-esc="tot_amount"
                            t-esc-options='{"widget": "monetary", "display_currency": docs[0].move_id.company_id.currency_id}'/>
                        </p></strong>
                    </div>
                </div>
            </t>
        </t>
    </template>

    </data>
</openerp>